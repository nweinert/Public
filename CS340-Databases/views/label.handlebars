<h3>Add new Label:</h3>
<form id="addLabel" action="/label" method="post">
    Label Name: <input type="text" name="name" required minlength="1"><br>
    Label City: <input type="text" name="city"><br>
    Label State: <select name="state"> 
		{{#each state}}
        <option value="{{stateId}}">{{stateCode}}, {{stateName}}</option>
		{{/each}}
    </select><br>
    <input type="submit" value="Submit">
 </form>
<br/>



<h3>Current Record Labels:</h3>
<table>
    <thead> 
        <th>Label Name</th> 
        <th>Label City</th>
	<th>Label State</th> 
    </thead> 
    <tbody>
        {{#each label}} 
        <tr> 
            <td>{{labelName}}</td> 
            <td>{{labelCity}}</td>
	    <td>{{stateName}}</td> 
        </tr> 
        {{/each}} 
    </tbody> 
</table><br>
